.circuit-content
    .leaderboard-container
        display flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 1.5em

        &.has-no-score
            .no-score
                display block

        .leaderboard
            font-weight 700
            margin-top 20px
            margin-bottom 20px
            background rgba(255, 255, 255, 0.05)
            backdrop-filter blur(10px) saturate(180%)
            -webkit-backdrop-filter blur(10px) saturate(180%)
            border 1px solid rgba(255, 255, 255, 0.15)
            border-radius 12px
            padding 15px
            box-shadow 0 4px 16px rgba(0, 0, 0, 0.15)

            tr
                td
                    &:nth-child(1)
                        opacity 0.6
                        padding-right 30px
                        text-align center

                    &:nth-child(2)
                        padding-right 30px
                        
                    &:nth-child(3)
                        padding-right 30px
                        
        .no-score
            margin-top 30px
            display none
            font-weight 700
            
        .reset-time
            font-weight 700

    .racing-buttons
        display none

        &.is-active
            display flex