.menu .contents .achievements-content

    .title
        text-align center
        margin-bottom 0

    .global-progress
        position relative
        margin-bottom 1em
        text-align center

        &.is-achieved
            .ratio
                color #d5ff95

            .time
                display inline
                font-weight 700

                &::before
                    content 'in '
                    font-weight 400
                    opacity 0.65

        .ratio
            color #ffceca
            font-weight 700

        .time
            display none

    .rewards-container
        margin-bottom 2em

        .title
            font-size 1.7rem
            text-align center
            margin-bottom 0.5em

        .rewards
            display flex
            justify-content center
            gap 10px

            @media only screen and (max-width 440px)
                gap 2px

        .reward
            display block
            position relative

            .tooltip
                --width 130px

            &.is-active
                &::after
                    border-color #d5ff95
                    opacity 0.75

            &.is-locked
                cursor not-allowed

                .lock
                    display block

            html:not(.is-mode-touch) &:hover
                &::after
                    opacity 0.75

                .lock
                    .lock-icon
                        opacity 1

            &::after
                content ''
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background rgba(255, 255, 255, 0.1)
                backdrop-filter blur(10px) saturate(180%)
                -webkit-backdrop-filter blur(10px) saturate(180%)
                border 1px solid rgba(255, 255, 255, 0.25)
                border-radius 8px
                box-shadow 0 2px 8px rgba(0, 0, 0, 0.15)

            .picture
                display block
                width 40px
                height 40px
                margin 3px

            .lock
                display none
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background #00000055

                .lock-icon
                    position absolute
                    top calc(50% - 22px / 2)
                    left calc(50% - 16px / 2)
                    opacity 0.75

    .items
        margin-bottom 2em
    
    .achievement
        margin-bottom 1em

        &.is-achieved
            .title
                color #d5ff95

            .description
                .progress
                    color #d5ff95

                    .check-icon
                        display block

            .bar
                .fill
                    background #d5ff95

        .title
            text-align left
            color #ffceca
            font-size 1.7rem
            margin-bottom 0

        .description
            display flex
            justify-content space-between
            align-items flex-end
            margin-bottom 0.5em

            .text
                margin-bottom 0

            .progress
                display flex
                align-items center
                font-weight 700
                color #ffceca

                .check-icon
                    display none
                    width 17px
                    height 13px
                    margin-right 10px
                    background url('../ui/achievements/check.svg')

        .bar
            position relative
            height 18px
            background rgba(255, 255, 255, 0.08)
            backdrop-filter blur(10px) saturate(180%)
            -webkit-backdrop-filter blur(10px) saturate(180%)
            border 1px solid rgba(255, 255, 255, 0.25)
            border-radius 9px
            overflow hidden
            box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.2)

            .fill
                position absolute
                top 0
                right 0
                bottom 0
                left 0
                background linear-gradient(90deg, rgba(255, 206, 202, 0.8), rgba(255, 206, 202, 1))
                transform-origin 0 0
                transform scaleX(0)
                transition transform 0.3s ease

    .button-reset
        width 215px
